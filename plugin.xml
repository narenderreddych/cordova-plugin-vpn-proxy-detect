<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-vpn-proxy-detect" version="1.1.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    
    <name>VpnProxyDetect</name>
    <description>Detect VPN and Proxy presence on Android and iOS</description>
    
    <js-module src="www/vpnproxy.js" name="vpnproxy">
        <clobbers target="cordova.plugins.vpnproxy" />
    </js-module>
    
    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        </config-file>
        
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="VpnProxyDetect">
                <param name="android-package" value="com.vpndetect.VpnProxyDetect" />
            </feature>
        </config-file>
        
        <source-file src="src/android/VpnProxyDetect.java" target-dir="src/com/vpndetect" />
    </platform>
    
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="VpnProxyDetect">
                <param name="ios-package" value="VpnProxyDetect" />
            </feature>
        </config-file>
        
        <source-file src="src/ios/VpnProxyDetect.m" />
        <framework src="CFNetwork.framework" />
        <framework src="SystemConfiguration.framework" />
        <framework src="UIKit.framework" />
    </platform>
    
    <engines>
        <engine name="cordova" version=">=9.0.0" />
        <engine name="cordova-android" version=">=9.0.0" />
        <engine name="cordova-ios" version=">=6.0.0" />
    </engines>
</plugin>
